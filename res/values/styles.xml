<resources>

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden|adjustPan</item>
    </style>

    <!-- splash activity -->
    <style name="vfill">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="vfill.launch">
        <item name="android:background">@drawable/bg_launch</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="titlebar">
        <item name="android:background">@drawable/title</item>
        <item name="android:layout_height">@dimen/titleHeight</item>
        <item name="android:paddingLeft">@dimen/M</item>
        <item name="android:paddingRight">@dimen/M</item>
    </style>

    <style name="logo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- tab -->
    <style name="tabTop">
        <item name="android:foregroundGravity">top|fill_horizontal</item>
    </style>

    <style name="bottomtab">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="rb"></style>

    <style name="rb.tab">
        <item name="android:textSize">12sp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/state_rb_tab</item>
        <item name="android:textColor">@drawable/state_color_tab</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="dialog" parent="android:style/Theme.Dialog">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textSize">@dimen/textM</item>
    </style>

    <style name="page">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="gv">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:numColumns">4</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/M</item>
        <item name="android:paddingLeft">@dimen/M</item>
        <item name="android:paddingRight">@dimen/M</item>
    </style>

    <style name="gv.menu">
        <item name="android:layout_marginTop">@dimen/gridMargin</item>
        <item name="android:horizontalSpacing">0dp</item>
        <item name="android:verticalSpacing">@dimen/gridVSpace</item>
    </style>

    <style name="gv.menu.more">
        <item name="android:background">#CCD5DC</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="menuItem">
        <item name="android:background">@drawable/state_menu_item</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#484848</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:gravity">top|center_horizontal</item>
    </style>

    <style name="more_panel_textview_title">
        <item name="android:textSize">16.0sp</item>
        <item name="android:duplicateParentState">true</item>
    </style>

    <style name="more_panel_imageview_title">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
    </style>

</resources>